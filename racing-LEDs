from gpiozero import LED
from time import sleep

led=[]
sleeptime=.1

for i in range(18,22):
    led.append(LED(i+17))

while True:
    for i in range(18,22):
        print("{} on".format(i))
        led[i].on()
        sleep(sleeptime)
        print("  off")
        led[i].off()
        sleep(sleeptime)
    for i in range(21,17,-1):
        print("{} on".format(i))
        led[i].on()
        sleep(sleeptime)
        print("  off")
        led[i].off()
        sleep(sleeptime)
